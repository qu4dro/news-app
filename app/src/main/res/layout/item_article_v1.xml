<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="ru.orlovvv.newsapp.data.model.Article" />

        <variable
            name="listener"
            type="ru.orlovvv.newsapp.adapters.ArticleAdapter.ArticleAdapterListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/CardViewStyle.FlatCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> listener.onArticleClick(view,article)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <com.google.android.material.card.MaterialCardView
                app:layout_constraintDimensionRatio="2:1"
                android:layout_marginTop="12dp"
                android:backgroundTint="?attr/colorPrimary"
                style="@style/CardViewStyle.ImageCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_badges"
                android:id="@+id/cv_article_preview"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/iv_article_preview"
                    imageUrl="@{article.urlToImage}"
                    cardView="@{cvArticlePreview}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title"
                articleText="@{article.title}"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.News.NewsPreviewHeadline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Short title with main information about this article" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_description"
                articleText="@{article.description}"
                android:layout_width="0dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/TextAppearance.News.NewsPreviewText"
                android:textColor="?android:textColorSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_article_preview"
                tools:text="Short title with main information about this article" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="4dp"
                android:id="@+id/tv_badges"
                author="@{article.author}"
                date="@{article.publishedAt}"
                source="@{article.source.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.News.NewsPreviewBadges"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:text="Google.com Ivan Ivanov" />

            <View
                android:id="@+id/delimiter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:dividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>