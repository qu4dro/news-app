<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigation.CleanStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">selected</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/icon_state_selector</item>
        <item name="itemTextColor">@color/icon_state_selector</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.News.BottomNavigation</item>
    </style>

    <style name="CardViewStyle.Flat.Rounded" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="AppBarStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>