<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="iconTint">@color/design_default_color_on_primary</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="backgroundTint">@color/design_default_color_primary</item>
    </style>

    <style name="ButtonStyle.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">30dp</item>
        <item name="elevation">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
<!--        <item name="iconTint">@color/design_default_color_primary_variant</item>-->
    </style>


    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">8dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="color">@color/design_default_color_on_primary</item>
    </style>

    <style name="ChipStyle.Text" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProgressBarTheme" parent="@style/Theme.NewsApp">
        <item name="colorAccent">@color/design_default_color_primary_variant</item>
    </style>
</resources>