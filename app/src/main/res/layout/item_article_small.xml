<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="ru.orlovvv.newsapp.data.model.Article" />

        <variable
            name="listener"
            type="ru.orlovvv.newsapp.adapters.ArticleAdapter.ArticleAdapterListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/CardViewStyle.FlatCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> listener.onArticleClick(view,article)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="14dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_image_preview"
                style="@style/CardViewStyle.ImageCard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toEndOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    imageUrl="@{article.urlToImage}"
                    android:id="@+id/iv_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@{article.title}"
                android:textAppearance="@style/TextAppearance.News.NewsPreviewHeadline"
                app:layout_constraintEnd_toStartOf="@id/cv_image_preview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Short title with main information about this article" />

<!--            <com.google.android.material.textview.MaterialTextView-->
<!--                android:id="@+id/tv_badges"-->
<!--                android:layout_width="0dp"-->
<!--                android:alpha="0.6"-->
<!--                categories="@{article.categories}"-->
<!--                source="@{article.source}"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:textAppearance="@style/TextAppearance.News.NewsPreviewSource"-->
<!--                app:layout_constraintHorizontal_bias="0"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/tv_title"-->
<!--                tools:text="Sport Google.com" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>